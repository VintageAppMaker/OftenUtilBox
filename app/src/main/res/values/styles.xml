<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24dp</item>
        <item name= "android:lines">2</item>
        <item name="android:textColor">#FFF7F5</item>
    </style>

    <style name="Toolbar.TitleSmallText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">18dp</item>
    <item name= "android:ellipsize">end</item>
    </style>

    <style name="Normal.transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomNaviTextStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>